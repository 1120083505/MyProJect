@{
    Layout = null;
}
<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
		<title>青岛卓尔软件开发有限公司</title>
        <link href="~/css/login_my.css" rel="stylesheet" />

		<script type="text/javascript">
		    document.addEventListener('plusready', function () {
		        //console.log("所有plus api都应该在此事件发生后调用，否则会出现plus is undefined。"

		    });

		</script>
        <style>
            .bg-background
{
	width: 100%;
	height: 100%;
	background-image: url(../Content/img/Login.png);
	-moz-background-size:100% 100%;
	-webkit-background-size: 100% 100%;
	background-size: 100% 100%;
}
            </style>
	</head>
	<body >
			
		<div class="bg-background">
			<div class="login_kuang" style="height:250px;top:30%">
			<br /> <br />
                  <h1 class="w" style="position:absolute;margin-top:15%;margin-left:25%;color:#000000"  ></h1>
				  
				<form class="form_sty form" >
					<div class="div-bor">
						<i class="icon-user"></i>
						<input type="text" id="UserName" name="name" class="text_do" value="" style="color:#000000" placeholder="请输入账号" />
					</div>
					<div class="div-bor">
						<i class="icon-user icon-user2"></i>
					<input type="password" id="PassWord" name="pwd" class="text_do" value="" style="color:#000000" placeholder="请输入密码"/><br />
					</div>
                    <br />
					<input type="submit"   id="login-button" class="btn_sty" value="登 录"/>
				</form>
                <div id="tip"></div>
			</div>
		</div>
         <script src="~/Scripts/jquery-1.7.1.js"></script>
     @*   <script src="~/Scripts/weui-master/ad.js"></script>*@
    <script>

        $(function () {
          
            if ('@Core.LoginInfo.Status' != null) {
                $("#UserName").val("@Core.LoginInfo.UserName")
                $("#PassWord").val("@Core.LoginInfo.PassWord")
                return;
            }

        })
        
        $('#login-button').click(function (event) {
            event.preventDefault();

            $.ajax({
                url:"@Url.Action("GetInfo")",
                data: {Status: "1", ActionName: "WXLogin", Parameter: "UserName=" + $("#UserName").val() + "&" + "PassWord=" + $("#PassWord").val(),  },
             
                type: "Post",
           
                dataType: "json",
                success: function (data) {
                    //data = eval("(" + data.Memo + ")");
                    if (data.Status == 1) {
                        $(".w").text("@Resource.lang.Welcome");
                        $('.login_kuang').addClass('form-success');
                        $("#tip").text("");
                        $('form').fadeOut(500);
                        setInterval(function () {
                            $(".w").text($(".w").text() + ".");

                        }, 1200);
                        setTimeout(function () {
                            window.location.href = '/WHome/Index';

                        }, 1000);
                    }
                    else {
                        $("#tip").text(data.Memo);
                    }                                                                                                                
                }
            });

            return false;
        });
    </script>
	</body>

</html>

