<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="/Content/themes/@(Core.LoginInfo.Theme == null ? "default" : Core.LoginInfo.Theme)/easyui.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/easyui")
    <style>
        html, body
        {
            margin: 0px;
            padding: 0px;
        }

        .mvctool
        {
            z-index: 999;
        }

        .requiredStar
        {
            color: red;
        }
    </style>
    <script>
        $(document).ready(function () {
            $(".easyui-combobox").combobox({
                editable: false
            });
            $(".combo-panel ").css("overflow", "auto");
            //$(".mvctool").css("position", "fixed").after("<div style='height:35px;margin-bottom: 2px'><div>")
            //.css("width", $("html").width());
        });
    </script>
</head>
<body>
    <div style="display: none">
        <span class="requiredStar">*</span>
    </div>
    @RenderBody()
</body>
</html>
