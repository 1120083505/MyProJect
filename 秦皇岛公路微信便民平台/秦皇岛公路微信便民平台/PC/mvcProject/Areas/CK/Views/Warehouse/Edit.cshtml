@{
    Layout = "~/Views/Shared/_Index_Create.cshtml";
}
<script src="~/lib/angular.js"></script>
@model  ZrSoft.CK_Warehouse
<script>

         var myApp = angular.module('Create', []);
    layui.use(['form', 'layedit', 'laydate'], function () {
        var form = layui.form()
        , layer = layui.layer;
        //监听提交
        form.on('submit(Accept)', function (data) {
            var json = data.field;
            json["Id"] = "@Model.Id";
            $.ajax({
                url: "@Url.Action("Edit")",
                type: "Post",
                data: json,
                dataType: "json",
                success: function (data) {
                    window.parent.callBack(data);
                }
            });
            return false;
        });
    });
</script>
<fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
    <legend>
        <a class="layui-icon close" style="padding: 5px; font-size:larger; cursor:pointer" title="@Resource.lang.Back">&#xe6ff;</a> @Resource.lang.CK_Warehouse
    </legend>
</fieldset>
<form class="layui-form" action="">
    <div class="layui-form-item">
        <label class="layui-form-label">
            @Resource.lang.CK_Warehouse_Name
        </label>
        <div class="layui-input-block">
            <input id='Name' name='Name' type="text" lay-verify="" autocomplete="off" placeholder="@Model.Name" class="layui-input" value='@Model.Name'>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">
            @Resource.lang.CK_Warehouse_Area
        </label>
        <div class="layui-input-block">
            <input id='Area' name='Area' type="number" class="layui-input" lay-verify="" lay-verify="number" autocomplete="off" placeholder="@Model.Area" precision="2" value='@Model.Area'>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">
            @Resource.lang.CK_Warehouse_Ardess
        </label>
        <div class="layui-input-block">
            <input id='Ardess' name='Ardess' type="text" lay-verify="" autocomplete="off" placeholder="@Model.Ardess" class="layui-input" value='@Model.Ardess'>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">
            @Resource.lang.CK_Warehouse_Stock
        </label>
        <div class="layui-input-block">
            <input id='Stock' name='Stock' type="text" lay-verify="" autocomplete="off" placeholder="@Model.Stock" class="layui-input" value='@Model.Stock'>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">
            @Resource.lang.CK_Warehouse_Memo
        </label>
        <div class="layui-input-block">
            <textarea id='Memo' name='Memo' placeholder="@Resource.lang.CK_Warehouse_Memo" class="layui-textarea">@Model.Memo</textarea>
        </div>
    </div>
    
    <div class="layui-form-item">
        <div class="layui-input-block">
            <button class="layui-btn" lay-submit="" lay-filter="Accept">@Resource.lang.Accept</button>
            <button type="reset" class="layui-btn layui-btn-primary">@Resource.lang.Reset</button>
        </div>
    </div>
</form>
