@{ 
    Layout = "~/Views/Shared/_Index_Create.cshtml"; 
} 
@model  ZrSoft.Sys_Rating 
<script> 
    layui.use(['form', 'layedit', 'laydate'], function () { 
        var form = layui.form() 
        , layer = layui.layer; 
        //监听提交 
        form.on('submit(Accept)', function (data) { 
            var json = data.field; 
            $.ajax({ 
               url: "@Url.Action("Create")", 
                type: "Post", 
                data: json, 
                dataType: "json", 
                success: function (data) { 
                    window.parent.callBack(data); 
                } 
            }); 
            return false; 
        }); 
    }); 
</script> 
<fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;"> 
    <legend> 
        <a class="layui-icon close" style="padding: 5px; font-size:larger; cursor:pointer" title="@Resource.lang.Back" >&#xe6ff;</a>@Resource.lang.Sys_Rating   
    </legend> 
</fieldset> 
<form class="layui-form" action=""> 
    <div class="layui-form-item"> 
        <label class="layui-form-label">@Resource.lang.Sys_Rating_Type</label> 
        <div class="layui-input-block"> 
                    <input id='Type' name='Type' type="number" lay-verify="" lay-verify="number" placeholder="@Resource.lang.Sys_Rating_Type" autocomplete="off" class="layui-input" > 
        </div> 
    </div>
    <div class="layui-form-item"> 
        <label class="layui-form-label">@Resource.lang.Sys_Rating_Name</label> 
        <div class="layui-input-block"> 
                    <input id='Name' name='Name' type="text" lay-verify="" lay-verify="title" autocomplete="off" placeholder="@Resource.lang.Sys_Rating_Name" class="layui-input" > 
        </div> 
    </div>
    <div class="layui-form-item"> 
        <label class="layui-form-label">@Resource.lang.Sys_Rating_Memo</label> 
        <div class="layui-input-block"> 
                    <input  id='Memo' name='Memo' type="text" lay-verify="" lay-verify="title" autocomplete="off" placeholder="@Resource.lang.Sys_Rating_Memo" class="layui-input" data-options="multiline:true" style="height:80px;"  >
        </div> 
    </div>
    <div class="layui-form-item"> 
        <label class="layui-form-label">@Resource.lang.Sys_Rating_EditAdminId</label> 
        <div class="layui-input-block"> 
                    <input id='EditAdminId' name='EditAdminId' type="text" lay-verify="" lay-verify="title" autocomplete="off" placeholder="@Resource.lang.Sys_Rating_EditAdminId" class="layui-input" > 
        </div> 
    </div>
    <div class="layui-form-item"> 
        <label class="layui-form-label">@Resource.lang.Sys_Rating_EditPubDate</label> 
        <div class="layui-input-block"> 
                    <input id='EditPubDate' name='EditPubDate' type="text" lay-verify="date" lay-verify="" placeholder="@Resource.lang.Sys_Rating_EditPubDate"  autocomplete="off" onclick="layui.laydate({elem: this})" class="layui-input"  missingmessage="日期不能为空" editable="false" > 
        </div> 
    </div>
    <div class="layui-form-item"> 
        <div class="layui-input-block"> 
            <button class="layui-btn" lay-submit="" lay-filter="Accept">@Resource.lang.Accept</button> 
            <button type="reset" class="layui-btn layui-btn-primary">@Resource.lang.Reset</button> 
        </div> 
    </div> 
</form> 
