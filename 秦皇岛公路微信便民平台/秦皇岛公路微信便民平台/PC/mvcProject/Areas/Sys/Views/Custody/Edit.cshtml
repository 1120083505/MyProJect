@{ 
    Layout = "~/Views/Shared/_Index_Create.cshtml"; 
} 
<script src="~/lib/angular.js"></script>
@model  ZrSoft.Sys_Custody 
<script>
    var myApp = angular.module('Create', []);
    layui.use(['form', 'layedit', 'laydate'], function () {
        var form = layui.form()
        , layer = layui.layer;
        //监听提交 
        form.on('submit(Accept)', function (data) {
            var json = data.field;
            json["Id"] = "@Model.Id";
            $.ajax({
                url: "@Url.Action("Edit")",
                type: "Post",
                data: json,
                dataType: "json",
                success: function (data) {
                    window.parent.callBack(data);
                }
            });
            return false;
        });
    });
</script> 
<fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;"> 
    <legend> 
        <a class="layui-icon close" style="padding: 5px; font-size:larger; cursor:pointer" title="@Resource.lang.Back" >&#xe6ff;</a> @Resource.lang.Sys_Custody </legend>
</fieldset> 
<form class="layui-form" action=""> 
