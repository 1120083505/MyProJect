@{ 
    Layout = "~/Views/Shared/_Index_Create.cshtml"; 
}
@model  ZrSoft.Sys_Module
<link href="~/lib/layui/font/iconfont.css" rel="stylesheet" />
<script>
    layui.use(['form', 'layedit', 'laydate'], function () {
        var form = layui.form()
        , layer = layui.layer;
        //监听提交 
        form.on('submit(Accept)', function (data) {
            var json = data.field;
            $.ajax({
                url: "@Url.Action("Create")",
                type: "Post",
                data: json,
                dataType: "json",
                success: function (data) {
                    window.parent.callBack(data);
                }
            });
            return false;
        });
    });
    function PicClick() {
        layer.open({
            type: 2,
            title: '选择图标',
            shadeClose: false,
            shade: 0.8,
            area: ['380px', '50%'],
            content: '/Icon/Index' //iframe的url
        });
    }
    function CallBackIcon(json) {
        layer.closeAll('iframe');
        $("#Icon").val(json.fontclass);
        $("#ImgSty").html("<span class='tree-icon icon iconfont " + json.fontclass + "' style='text-align:center;float:left;line-height:38px;font-size:30px;margin-right:5px;'></span>");
    }
</script>
<fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
