    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">@Resource.lang.Sys_Module_Sort</label>
        <div class="layui-input-block">
            <input id='Sort' name='Sort' type="number" lay-verify="required" lay-verify="number" placeholder="@Resource.lang.Sys_Module_Sort" autocomplete="off" class="layui-input" value="@Model.Sort" >
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">@Resource.lang.Sys_Module_IsLast</label>
        <div class="layui-input-block">
            @*<input id='IsLast' name='IsLast' type="number" lay-verify="required" lay-verify="number" placeholder="@Resource.lang.Sys_Module_IsLast" autocomplete="off" class="layui-input" > *@
          
