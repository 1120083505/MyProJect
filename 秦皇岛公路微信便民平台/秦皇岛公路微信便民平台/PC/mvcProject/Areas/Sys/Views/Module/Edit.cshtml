    <div class="layui-form-item">
        <label class="layui-form-label">@Resource.lang.Sys_Module_Memo</label>
        <div class="layui-input-block">
            <input  id='Memo' name='Memo' type="text" lay-verify="" value="@Model.Memo" lay-verify="title" autocomplete="off" placeholder="@Resource.lang.Sys_Module_Memo" class="layui-input" data-options="multiline:true" style="height:80px;"  >
        </div>
    </div>
    <div class="layui-form-item">
        <div class="layui-input-block">
            <button class="layui-btn" lay-submit="" lay-filter="Accept">@Resource.lang.Accept</button>
            <button type="reset" class="layui-btn layui-btn-primary">@Resource.lang.Reset</button>
