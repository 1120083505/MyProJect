        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">@Resource.lang.Sys_Module_IsShow</label>
        <div class="layui-input-block">
            @*<input id='IsShow' name='IsShow' type="number" lay-verify="required" lay-verify="number" placeholder="@Resource.lang.Sys_Module_IsShow" autocomplete="off" class="layui-input" >*@
          
               
