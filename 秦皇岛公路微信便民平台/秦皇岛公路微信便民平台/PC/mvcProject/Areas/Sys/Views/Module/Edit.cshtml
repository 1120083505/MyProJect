@{ 
    Layout = "~/Views/Shared/_Index_Create.cshtml"; 
}
@model  ZrSoft.Sys_Module
<script src="~/lib/angular.js"></script>
<link href="~/lib/layui/font/iconfont.css" rel="stylesheet" />
<script>
    var myApp = angular.module("Create", []);
    layui.use(['form', 'layedit', 'laydate'], function () {
        var form = layui.form()
        , layer = layui.layer;
        //监听提交 
        form.on('submit(Accept)', function (data) {
            var json = data.field;
            json["Id"] = "@Model.Id";
            $.ajax({
                url: "@Url.Action("Edit")",
                type: "Post",
                data: json,
                dataType: "json",
                success: function (data) {
                    window.parent.callBack(data);
                }
            });
            return false;
        });
    });
    function PicClick() {
        layer.open({
            type: 2,
            title: '选择图标',
            shadeClose: false,
            shade: 0.8,
            area: ['380px', '50%'],
            content: '/Icon/Index?fontclass=' + '@Model.Icon' //iframe的url
        });
    }
    function CallBackIcon(json) {
        layer.closeAll('iframe');
        $("#Icon").val(json.fontclass);
        $("#ImgSty").html("<span class='tree-icon icon iconfont " + json.fontclass + "' style='text-align:center;float:left;line-height:38px;font-size:30px;margin-right:5px;'></span>");
    }
</script>
<fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
    <legend>
        <a class="layui-icon close" style="padding: 5px; font-size:larger; cursor:pointer" title="@Resource.lang.Back" >&#xe6ff;</a> @Resource.lang.Sys_Module </legend>
</fieldset>
<form class="layui-form" action="">
    <input name="ParentId" type="hidden" value="@ViewBag.ParentId" />
    <div class="layui-form-item">
        <label class="layui-form-label">上级名称</label>
        <div class="layui-input-block">
            <label style="line-height: 35px; font-size: 17px;">@ViewBag.ParentName</label>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">
            @Resource.lang.Sys_Module_Name
        </label>
        <div class="layui-input-block">
            <input id='Name' name='Name'  type="text" lay-verify="required" autocomplete="off" placeholder="@Model.Name" class="layui-input"  value='@Model.Name'>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">
            @Resource.lang.Sys_Module_EnName
        </label>
        <div class="layui-input-block">
            <input id='EnName' name='EnName'  type="text" lay-verify="required" autocomplete="off" placeholder="@Model.EnName" class="layui-input"  value='@Model.EnName'>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">
            @Resource.lang.Sys_Module_Url
        </label>
        <div class="layui-input-block">
            <input id='Url' name='Url'  type="text" lay-verify="" autocomplete="off" placeholder="@Model.Url" class="layui-input"  value='@Model.Url'>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">
            @Resource.lang.Sys_Module_Icon
        </label>
        <div class="layui-input-block">
            <div id="ImgSty"><span class='tree-icon icon iconfont @Model.Icon' style="text-align:center;float:left;line-height:38px;font-size:30px;margin-right:5px;"></span></div>
            <input id='Icon' name='Icon' type="hidden" value="@Model.Icon"/>
            <input type="button" onclick="PicClick()" style="width:20%;" lay-verify="" lay-verify="title" autocomplete="off" placeholder="@Resource.lang.Sys_Module_Icon" class="layui-input" value="选择">
            
            
