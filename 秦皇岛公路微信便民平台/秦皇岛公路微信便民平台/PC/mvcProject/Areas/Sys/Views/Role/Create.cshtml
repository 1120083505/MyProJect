@{ 
    Layout = "~/Views/Shared/_Index_Create.cshtml"; 
} 
@model  ZrSoft.Sys_Role 
<script src="~/lib/angular.js"></script>
<script>
    layui.use(['form', 'layedit', 'laydate'], function () {
        var form = layui.form()
        , layer = layui.layer;
        //监听提交 
        form.on('submit(Accept)', function (data) {
            var json = data.field;
            $.ajax({
                url: "@Url.Action("Create")",
                type: "Post",
                data: json,
                dataType: "json",
                success: function (data) {
                    window.parent.callBack(data);
                }
            });
            return false;
        });
    });
</script> 
<fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;"> 
    <legend> 
        <a class="layui-icon close" style="padding: 5px; font-size:larger; cursor:pointer" title="@Resource.lang.Back" >&#xe6ff;</a>@Resource.lang.Sys_Role   
    </legend> 
</fieldset> 
<form class="layui-form" action=""> 
    <div class="layui-form-item"> 
        <label class="layui-form-label">@Resource.lang.Sys_Role_Name</label> 
        <div class="layui-input-block"> 
                    <input id='Name' name='Name' type="text" lay-verify="required" lay-verify="title" autocomplete="off" placeholder="@Resource.lang.Sys_Role_Name" class="layui-input" > 
        </div> 
    </div>
    <div class="layui-form-item"> 
        <label class="layui-form-label">@Resource.lang.Sys_Role_Memo</label> 
        <div class="layui-input-block"> 
                    <input  id='Memo' name='Memo' type="text" lay-verify="required" lay-verify="title" autocomplete="off" placeholder="@Resource.lang.Sys_Role_Memo" class="layui-input" data-options="multiline:true" style="height:80px;"  >
        </div> 
    </div>
    <div class="layui-form-item"> 
        <div class="layui-input-block"> 
            <button class="layui-btn" lay-submit="" lay-filter="Accept">@Resource.lang.Accept</button> 
            <button type="reset" class="layui-btn layui-btn-primary">@Resource.lang.Reset</button> 
        </div> 
    </div> 
</form> 
