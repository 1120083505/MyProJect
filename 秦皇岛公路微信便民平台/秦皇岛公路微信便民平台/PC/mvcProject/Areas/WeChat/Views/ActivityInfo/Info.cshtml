@{
    Layout = "~/Views/Shared/_Index_Create.cshtml";
}
@model  ZrSoft.VWeChat_ActivityInfo
<script src="~/lib/angular.js"></script>
<script>

    layui.use(['form', 'layedit', 'laydate'], function () {
        var form = layui.form()
        , layer = layui.layer;
    });
</script>
<fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
    <legend>
        <a class="layui-icon close" style="padding: 5px; font-size:larger; cursor:pointer" title="@Resource.lang.Back">&#xe6ff;</a>  @Resource.lang.WeChat_ActivityInfo
    </legend>
</fieldset>
<form class="layui-form layui-form-pane" action="">
    <div class="layui-form-item">
        <label class="layui-form-label">@Resource.lang.WeChat_ActivityInfo_ActivityTitle</label><div class="layui-input-block">
            <label name="@Model.ActivityTitle" class="layui-input">@Model.ActivityTitle</label>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">@Resource.lang.WeChat_ActivityInfo_ActivityMemo</label><div class="layui-input-block">
            <label name="@Model.ActivityMemo" class="layui-input">@Model.ActivityMemo</label>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">@Resource.lang.WeChat_ActivityInfo_ActivityContent</label><div class="layui-input-block">
            <label name="@Model.ActivityContent" class="layui-input">@Model.ActivityContent</label>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">@Resource.lang.WeChat_ActivityInfo_StarTime</label><div class="layui-input-block">
            <label name="@Model.StarTime" class="layui-input">@Model.StarTime</label>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">@Resource.lang.WeChat_ActivityInfo_EndTime</label><div class="layui-input-block">
            <label name="@Model.EndTime" class="layui-input">@Model.EndTime</label>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">@Resource.lang.WeChat_ActivityInfo_AdminId</label><div class="layui-input-block">
            <label name="@Model.AdminId" class="layui-input">@Model.RealName</label>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">@Resource.lang.WeChat_ActivityInfo_PubDate</label><div class="layui-input-block">
            <label name="@Model.PubDate" class="layui-input">@Model.PubDate</label>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">@Resource.lang.WeChat_ActivityInfo_EditAdminId</label><div class="layui-input-block">
            <label name="@Model.EditAdminId" class="layui-input">@Model.EditRealName</label>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">@Resource.lang.WeChat_ActivityInfo_EditPubDate</label><div class="layui-input-block">
            <label name="@Model.EditPubDate" class="layui-input">@Model.EditPubDate</label>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">图片</label>
        <div class="layui-input-block">
            <input id="Moneypic" name="Moneypic" style="margin-top: 5px;" type="hidden" />
            <div id="img">
            </div>
            <input id="FileName" name="FileName" type="hidden" value="@ViewBag.FileName" />
            <input id="FileUrl" name="FileUrl" type="hidden" value="@ViewBag.FileUrl" />
        </div>
    </div>
</form>
