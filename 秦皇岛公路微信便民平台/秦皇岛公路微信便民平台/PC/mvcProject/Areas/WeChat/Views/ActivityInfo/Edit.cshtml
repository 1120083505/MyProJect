@{
    Layout = "~/Views/Shared/_Index_Create.cshtml";
}
<script src="~/lib/angular.js"></script>
<script src="~/Scripts/Picture.js"></script>
<script src="~/Scripts/jquery.uploadify-v2.1.4/jquery.uploadify.v2.1.4.min.js"></script>
<script src="~/Scripts/jquery.uploadify-v2.1.4/swfobject.js"></script>
<link href="~/Scripts/jquery.uploadify-v2.1.4/uploadify.css" rel="stylesheet" />
<script src="~/Scripts/ueditor1_4_3-utf8-net/ueditor.config.js"></script>
<script src="~/Scripts/ueditor1_4_3-utf8-net/ueditor.all.min.js"></script>
<script src="~/Scripts/EditPicture.js"></script>
@model  ZrSoft.WeChat_ActivityInfo
<script>
    $(function () {
        monpic();
    })
         var myApp = angular.module('Create', []);
    layui.use(['form', 'layedit', 'laydate'], function () {
        var form = layui.form()
        , layer = layui.layer;
        //监听提交
        form.on('submit(Accept)', function (data) {
            var json = data.field;
            json["Id"] = "@Model.Id";
            $.ajax({
                url: "@Url.Action("Edit")",
                type: "Post",
                data: json,
                dataType: "json",
                success: function (data) {
                    window.parent.callBack(data);
                }
            });
            return false;
        });
    });
</script>
<fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
    <legend>
        <a class="layui-icon close" style="padding: 5px; font-size:larger; cursor:pointer" title="@Resource.lang.Back">&#xe6ff;</a> @Resource.lang.WeChat_ActivityInfo
    </legend>
</fieldset>
<form class="layui-form" action="">
    <div class="layui-form-item">
        <label class="layui-form-label">
            @Resource.lang.WeChat_ActivityInfo_ActivityTitle
        </label>
        <div class="layui-input-block">
            <input id='ActivityTitle' name='ActivityTitle' type="text" lay-verify="" autocomplete="off" placeholder="@Model.ActivityTitle" class="layui-input" value='@Model.ActivityTitle'>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">
            @Resource.lang.WeChat_ActivityInfo_ActivityMemo
        </label>
        <div class="layui-input-block">
            <textarea id='ActivityMemo' name='ActivityMemo' placeholder="@Resource.lang.WeChat_ActivityInfo_ActivityMemo" class="layui-textarea">@Model.ActivityMemo</textarea>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">
            @Resource.lang.WeChat_ActivityInfo_ActivityContent
        </label>
        <div class="layui-input-block">
            <input id='ActivityContent' name='ActivityContent' type="text" lay-verify="" autocomplete="off" placeholder="@Model.ActivityContent" class="layui-input" value='@Model.ActivityContent'>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">
            @Resource.lang.WeChat_ActivityInfo_StarTime
        </label>
        <div class="layui-input-block">
            <input id='StarTime' name='StarTime' type="text" class="layui-input" lay-verify="date" lay-verify="" autocomplete="off" placeholder="@Model.StarTime" missingmessage="日期不能为空" onclick="layui.laydate({elem: this})" editable="false" value="@string.Format("{0:yyyy-MM-dd}", Model.StarTime)">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">
            @Resource.lang.WeChat_ActivityInfo_EndTime
        </label>
        <div class="layui-input-block">
            <input id='EndTime' name='EndTime' type="text" class="layui-input" lay-verify="date" lay-verify="" autocomplete="off" placeholder="@Model.EndTime" missingmessage="日期不能为空" onclick="layui.laydate({elem: this})" editable="false" value="@string.Format("{0:yyyy-MM-dd}",Model.EndTime)">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">
            图片
        </label>
        <div class="layui-input-block" style="float:left;margin:0">
            <input id="Moneypic" name="Moneypic" style="margin-top: 5px;" type="hidden" />
            <div id="img" style="float: left;margin-left: 96px;margin-top: -103px;">
            </div>
            <input id="FileName" name="FileName" type="hidden" value="@ViewBag.FileName" lay-verify="required" />
            <input id="FileUrl" name="FileUrl" type="hidden" value="@ViewBag.FileUrl" />
            <input id="FileType" name="FileType" type="hidden" value="@ViewBag.FileType" />
        </div>
    </div>
    <div class="layui-form-item">
        <div class="layui-input-block">
            <button class="layui-btn" lay-submit="" lay-filter="Accept">@Resource.lang.Accept</button>
            <button type="reset" class="layui-btn layui-btn-primary">@Resource.lang.Reset</button>
        </div>
    </div>
</form>
