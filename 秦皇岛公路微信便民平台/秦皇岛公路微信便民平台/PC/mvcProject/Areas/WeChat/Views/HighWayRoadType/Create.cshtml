@{ 
    Layout = "~/Views/Shared/_Index_Create.cshtml"; 
} 
@model  ZrSoft.WeChat_HighWayRoadType 
<script src="~/lib/angular.js"></script>
<script> 
     var myApp = angular.module('Create', []); 
    layui.use(['form', 'layedit', 'laydate'], function () { 
        var form = layui.form() 
        , layer = layui.layer; 
        //监听提交 
        form.on('submit(Accept)', function (data) { 
            var json = data.field; 
            $.ajax({ 
               url: "@Url.Action("Create")", 
                type: "Post", 
                data: json, 
                dataType: "json", 
                success: function (data) { 
                    window.parent.callBack(data); 
                } 
            }); 
            return false; 
        }); 
    }); 
</script> 
<fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;"> 
    <legend> 
        <a class="layui-icon close" style="padding: 5px; font-size:larger; cursor:pointer" title="@Resource.lang.Back" >&#xe6ff;</a>@Resource.lang.WeChat_HighWayRoadType   
    </legend> 
</fieldset> 
<form class="layui-form" action=""> 
    <div class="layui-form-item"> 
        <label class="layui-form-label">@Resource.lang.WeChat_HighWayRoadType_Name</label> 
        <div class="layui-input-block"> 
                    <input id='Name' name='Name' type="text" lay-verify="" lay-verify="title" autocomplete="off" placeholder="@Resource.lang.WeChat_HighWayRoadType_Name" class="layui-input" > 
        </div> 
    </div>
    <div class="layui-form-item"> 
        <label class="layui-form-label">@Resource.lang.WeChat_HighWayRoadType_Type</label> 
        <div class="layui-input-block"> 
                    <input id='Type' name='Type' type="text" lay-verify="" lay-verify="title" autocomplete="off" placeholder="@Resource.lang.WeChat_HighWayRoadType_Type" class="layui-input" > 
        </div> 
    </div>
    <div class="layui-form-item"> 
        <label class="layui-form-label">@Resource.lang.WeChat_HighWayRoadType_Memo</label> 
        <div class="layui-input-block"> 
                    <textarea id='Memo' name='Memo' placeholder="@Resource.lang.WeChat_HighWayRoadType_Memo" class="layui-textarea"></textarea>  
         </div> 
    </div>
    <div class="layui-form-item"> 
        <div class="layui-input-block"> 
            <button class="layui-btn" lay-submit="" lay-filter="Accept">@Resource.lang.Accept</button> 
            <button type="reset" class="layui-btn layui-btn-primary">@Resource.lang.Reset</button> 
        </div> 
    </div> 
</form> 
