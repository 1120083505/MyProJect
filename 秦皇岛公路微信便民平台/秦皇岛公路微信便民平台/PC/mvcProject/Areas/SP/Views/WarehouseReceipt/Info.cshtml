    <div>
        <p style="float:left">客户:@Model.CustomerName</p>
        <p style="float:left;margin-left:10%">客户电话:@Model.Phone </p>
        <p style="float:left;margin-left:10%">时间:@string.Format("{0:yyyy-MM-dd}", DateTime.Now.ToShortDateString())</p>
    </div>
    <div>
