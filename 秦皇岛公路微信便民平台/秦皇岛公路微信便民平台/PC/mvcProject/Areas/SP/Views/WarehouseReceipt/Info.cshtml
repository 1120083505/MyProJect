            <thead>
                <tr class="">
                    <th>@Resource.lang.SP_ShangPinInfo_FormId</th>
                    <th>@Resource.lang.SP_ShangPinInfo_Num</th>
                    <th>@Resource.lang.SP_ShangPinInfo_Price</th>
                    <th>@Resource.lang.SP_ShangPinInfo_SumPrice</th>
                    <th>@Resource.lang.SP_ShangPinInfo_Warehouse</th>
                    @*<th>@Resource.lang.SP_ShangPinInfo_Customer</th>*@
