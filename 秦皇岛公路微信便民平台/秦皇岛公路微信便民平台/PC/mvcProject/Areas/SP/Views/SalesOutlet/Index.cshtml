@using Core
@{
    ViewBag.Title = "Resource.lang.SP_SaleMain";
    Layout = "~/Views/Shared/_Index_Layout.cshtml";
}
<div style="padding-top: 10px;">
    @MvcHtmlString.Create(printControl.PowerLinkBtn(@Url.Action("")))
</div>
<hr />
<form style="" class="layui-form">
    <div class="layui-input-inline">
        <select lay-verify="required" name="WareType" ng-controller="CustomerController" lay-filter="CustodyId">
            <option value="">@Resource.lang.Select@Resource.lang.SP_SaleMain_Customer</option>
            <option ng-repeat="x in data" value="{{ x.Id}}">{{ x.CustomerName}}</option>
        </select>
        @*<input id='Customer' name='Customer' type="text" lay-verify="title" autocomplete="off" placeholder="@Resource.lang.Input @Resource.lang.SP_SaleMain_Customer" class="layui-input">*@
    </div>
    <div class="layui-input-inline">
        <input id='OpeningTime' name='OpeningTime' type="text" lay-verify="date" placeholder=">=@Resource.lang.Input  @Resource.lang.SP_SaleMain_OpeningTime" autocomplete="off" onclick="layui.laydate({elem: this})" class="layui-input">
    </div>
    <div class="layui-input-inline">
        <input id='OpeningTime_2' name='OpeningTime_2' type="text" lay-verify="date" placeholder="<=@Resource.lang.Input  @Resource.lang.SP_SaleMain_OpeningTime" autocomplete="off" onclick="layui.laydate({elem: this})" class="layui-input">
    </div>
    <button class="layui-btn layui-btn-primary SearchBtn" id="btnSearch"><i class="layui-icon">&#xe651;</i>@Resource.lang.Search</button>
    <button class="layui-btn layui-btn-primary SearchBtn" type="reset" id="btnClear"><i class="layui-icon">&#xe641;</i>@Resource.lang.Reset</button>
</form>
<table class="layui-table">
    <colgroup>
        <col width="20">
        <col width="50">
        <col width="150">
        <col width="150">
        <col width="150">
        <col width="150">
        <col width="150">
        <col width="150">
        <col width="150">
        <col width="150">
        <col width="150">
    </colgroup>
    <thead>
        <tr class="">
            <th>
                <input id="checkOrNoAll" type="checkbox">
            </th>
            <th style="text-align: center">@Resource.lang.SortNo</th>
            <th>@Resource.lang.SP_SaleMain_Customer</th>
            <th>@Resource.lang.SP_SaleMain_TotalPrice</th>
            <th>@Resource.lang.SP_SaleMain_OpeningTime</th>
            <th>@Resource.lang.SP_SaleMain_AdminId</th>
            <th>@Resource.lang.SP_SaleMain_PubDate</th>
        </tr>
    </thead>
    <tbody ng-controller="listController">
        <tr ng-repeat="x in data" id="{{x.Id}}" ng-dblclick="RowsDbClick(x.Id)">
            <td>
                <input id="check{{ x.RowNumber }}" value="{{x.Id}}" class="checkList" type="checkbox" name="checkList">
            </td>
            <td style="text-align: center">{{ x.RowNumber}}</td>
            <td>{{x.Customer}}</td>
            <td>{{x.TotalPrice}}</td>
            <td>{{x.OpeningTime}}</td>
            <td>{{x.AdminId}}</td>
            <td>{{x.PubDate}}</td>
        </tr>
    </tbody>
</table>
<div id="paged" style="margin: 0px; padding: 0px; text-align: center"></div>
<script type="text/javascript">

    function callBack(data) {
        Alert(data);
        if (data.Status == 1) {
            layer.close(lIndex);
            searchcount = 0;
            paged(1);
        }
    }
    function Alert(data) {
        layer.msg(data.Memo, { icon: data.Status == 0 ? 2 : 1, time: 3 * 1000 });
    }
    function closeLayer() {
        layer.close(lIndex);
    }
    var layer, lIndex, ids = [];
    var paged, searchcount = 0, totalPages = 0;
    layui.use(['form', 'layedit', 'laydate', 'element', 'laypage'], function () {
        layer = layui.layer;
    });
    function CeatePage(pages, curr) {
        layui.use(['laypage'], function () {
            layer = layui.layer;
            layui.laypage({
                cont: 'paged'
              , pages: pages //总页数
                , curr: curr
                , groups: 5 //连续显示分页数
                  , skip: true
                  , jump: function (obj, first) {
                      var curr = obj.curr;
                      paged(curr);
                  }
            , prev: '<em><</em>'
            , next: '<em>></em>'
            , first: '<em>@Resource.lang.FristPage</em>'
            , last: '<em>@Resource.lang.LastPage</em>'
            });
        });
    }
    $(document).ready(function () {
        paged(1);
        $("#btnSearch").click(function () {
            searchcount = 0;
            paged(1);
            return false;
        });
        $('#btnCreate').click(function () {
            lIndex = layer.open({
                type: 2,
                title: '@Resource.lang.Create',
                shadeClose: true,
                shade: 0.3,
                maxmin: true, //开启最大化最小化按钮
                area: ['100%', '100%'],
                content: '@Url.Action("Create")'
            });
            if ($.UserMobileAgent())
                layer.full(lIndex);
        });
        $('#btnEdit').click(function () {
            ids = GetCheckedIds();
            if (ids.length == 0) {
                layer.msg('@Resource.lang.tip_NoSelect');
            }
           else if(ids.length>1)
           {
               layer.msg('@Resource.lang.tip_SelectOne');
           }
            else {
                lIndex = layer.open({
                    type: 2,
                    title: '@Resource.lang.Edit',
                    shadeClose: true,
                    shade: 0.3,
                    maxmin: true, //开启最大化最小化按钮
                    area: ['100%', '100%'],
                    content: '@Url.Action("Edit/")' + ids[0]
                });
                if ($.UserMobileAgent())
                    layer.full(lIndex);
            }
        });
        $("#btnDelete").click(function () {
            ids = GetCheckedIds();
            if (ids.length == 0) {
                layer.msg('@Resource.lang.tip_NoSelect');
            }
            else {
                layer.confirm('@Resource.lang.tip_Do_Dell', {
                    btn: ['@Resource.lang.OK', '@Resource.lang.Cancel'] //按钮
                }, function () {
                    $.post('@Url.Action("Delete")', { id: ids.join(',') }, function (data) {
                        callBack(data);
                    }, 'json');
                }, function () {
                });
            }
        });
        $('#btnInfo').click(function () {
            ids = GetCheckedIds();
            if (ids.length == 0) {
                layer.msg('@Resource.lang.tip_NoSelect');
            }
            else {
                Detail(ids[0])
            }
        });
    });
    function Detail(id) {
        lIndex = layer.open({
            type: 2,
            title: '@Resource.lang.Info',
                shadeClose: true,
                shade: 0.3,
                maxmin: true, //开启最大化最小化按钮
            area: ['100%', '100%'],
                content: '@Url.Action("Info/")' + id
          });
            if ($.UserMobileAgent())
                layer.full(lIndex);
    }
    var myApp = angular.module("list", []);
    myApp.controller('listController', function ($scope, $http) {
        $scope.RowsDbClick = function (id) {
            //显示详情
            Detail(id);
        }
        paged = $scope.GetData = function (page) {
            var queryStr = $('form').serialize();
            //alert(queryStr);
            if (searchcount == 1) {
                searchcount++;
            }
            else {
                $http.post('@Url.Action("GetList")', { page: page, queryStr: queryStr })
                    .success(function (d) {
                        //alert(JSON.stringify(d))
                        $scope.data = d.rows;
                        searchcount++;
                        if (searchcount == 1) {
                            CeatePage(d.pager.totalPages, 1);
                        }
                    });
            }
        };
    });
    myApp.controller('SaleMainController', function ($scope, $http) {
           $.ajax({
                url: '/SP/SaleMain/GetAllList',
                type: 'Post',
                dataType: 'json',
                async:false,
            success: function (d) {
                $scope.data = d.rows;
            }
        });
    });
    myApp.controller('CustomerController', function ($scope, $http) {
           $.ajax({
                url: '/SP/Customer/GetAllList',
                type: 'Post',
                dataType: 'json',
                async:false,
            success: function (d) {
                $scope.data = d.rows;
            }
        });
    });
</script>