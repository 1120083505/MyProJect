@{
    Layout = "~/Views/Shared/_Index_Create.cshtml";
}
@model  ZrSoft.SP_BankAccount
<script src="~/lib/angular.js"></script>
<script>

     var myApp = angular.module('Create', []);
    layui.use(['form', 'layedit', 'laydate'], function () {
        var form = layui.form()
        , layer = layui.layer;
        //监听提交
        form.on('submit(Accept)', function (data) {
            var json = data.field;
            $.ajax({
               url: "@Url.Action("Create")",
                type: "Post",
                data: json,
                dataType: "json",
                success: function (data) {
                    window.parent.callBack(data);
                }
            });
            return false;
        });
    });
    myApp.controller('sptypeController', function ($scope, $http) {
        $.ajax({
            url: "/sys/Admin/GetAllList",
            type: "POST",
            async: false,
            success: function (d) {
                $scope.data = d.rows;
            }
        });
    });
</script>
<fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
    <legend>
        <a class="layui-icon close" style="padding: 5px; font-size:larger; cursor:pointer" title="@Resource.lang.Back">&#xe6ff;</a>@Resource.lang.SP_BankAccount
    </legend>
</fieldset>
<form class="layui-form" action="">
    <div class="layui-form-item">
        <label class="layui-form-label">@Resource.lang.SP_BankAccount_CardNum</label>
        <div class="layui-input-block">
            <input id='CardNum' name='CardNum' type="text" lay-verify="" lay-verify="title" autocomplete="off" placeholder="@Resource.lang.SP_BankAccount_CardNum" class="layui-input">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">@Resource.lang.SP_BankAccount_BankName</label>
        <div class="layui-input-block">
            <input id='BankName' name='BankName' type="text" lay-verify="" lay-verify="title" autocomplete="off" placeholder="@Resource.lang.SP_BankAccount_BankName" class="layui-input">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">@Resource.lang.SP_BankAccount_UserId</label>
        <div class="layui-input-block">
            <select lay-verify="required" name="UserId" id="UserId" ng-controller="sptypeController" lay-filter="CustodyId">
                <option value="">@Resource.lang.Select@Resource.lang.SP_BankAccount_UserId</option>
                <option ng-repeat="x in data" value="{{ x.Id}}">{{ x.RealName}}</option>
            </select>
            @*<input id='UserId' name='UserId' type="text" lay-verify="" lay-verify="title" autocomplete="off" placeholder="@Resource.lang.SP_BankAccount_UserId" class="layui-input">*@
        </div>
    </div>
    <div class="layui-form-item">
        <div class="layui-input-block">
            <button class="layui-btn" lay-submit="" lay-filter="Accept">@Resource.lang.Accept</button>
            <button type="reset" class="layui-btn layui-btn-primary">@Resource.lang.Reset</button>
        </div>
    </div>
</form>
