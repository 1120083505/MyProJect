@{
    Layout = "~/Views/Shared/_Index_Create.cshtml";
}
<script src="~/lib/angular.js"></script>
@model  ZrSoft.SP_ShangPin
<script>

         var myApp = angular.module('Create', []);
    layui.use(['form', 'layedit', 'laydate'], function () {
        var form = layui.form()
        , layer = layui.layer;
        //监听提交
        form.on('submit(Accept)', function (data) {
            var json = data.field;
            json["Id"] = "@Model.Id";
            $.ajax({
                url: "@Url.Action("Edit")",
                type: "Post",
                data: json,
                dataType: "json",
                success: function (data) {
                    window.parent.callBack(data);
                }
            });
            return false;
        });
    });
</script>
<fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
    <legend>
        <a class="layui-icon close" style="padding: 5px; font-size:larger; cursor:pointer" title="@Resource.lang.Back">&#xe6ff;</a> @Resource.lang.SP_ShangPin
    </legend>
</fieldset>
<form class="layui-form" action="">
    <div class="layui-form-item">
        <label class="layui-form-label">
            @Resource.lang.SP_ShangPin_WareName
        </label>
        <div class="layui-input-block">
            <input id='WareName' name='WareName' type="text" lay-verify="" autocomplete="off" placeholder="@Model.WareName" class="layui-input" value='@Model.WareName'>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">
            @Resource.lang.SP_ShangPin_WareType
        </label>
        <div class="layui-input-block">
            <input id='WareType' name='WareType' type="text" lay-verify="" autocomplete="off" placeholder="@Model.WareType" class="layui-input" value='@Model.WareType'>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">
            @Resource.lang.SP_ShangPin_WarePrice
        </label>
        <div class="layui-input-block">
            <input id='WarePrice' name='WarePrice' type="number" class="layui-input" lay-verify="" lay-verify="number" autocomplete="off" placeholder="@Model.WarePrice" precision="2" value='@Model.WarePrice'>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">
            @Resource.lang.SP_ShangPin_Specifications
        </label>
        <div class="layui-input-block">
            <input id='Specifications' name='Specifications' type="text" lay-verify="" autocomplete="off" placeholder="@Model.Specifications" class="layui-input" value='@Model.Specifications'>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">
            @Resource.lang.SP_ShangPin_SellingPrice
        </label>
        <div class="layui-input-block">
            <input id='SellingPrice' name='SellingPrice' type="number" class="layui-input" lay-verify="" lay-verify="number" autocomplete="off" placeholder="@Model.SellingPrice" precision="2" value='@Model.SellingPrice'>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">
            @Resource.lang.SP_ShangPin_Warehouse
        </label>
        <div class="layui-input-block">
            <input id='Warehouse' name='Warehouse' type="text" lay-verify="" autocomplete="off" placeholder="@Model.Warehouse" class="layui-input" value='@Model.Warehouse'>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">
            @Resource.lang.SP_ShangPin_Memo
        </label>
        <div class="layui-input-block">
            <textarea id='Memo' name='Memo' placeholder="@Resource.lang.SP_ShangPin_Memo" class="layui-textarea">@Model.Memo</textarea>
        </div>
    </div>
    <div class="layui-form-item">
        <div class="layui-input-block">
            <button class="layui-btn" lay-submit="" lay-filter="Accept">@Resource.lang.Accept</button>
            <button type="reset" class="layui-btn layui-btn-primary">@Resource.lang.Reset</button>
        </div>
    </div>
</form>
