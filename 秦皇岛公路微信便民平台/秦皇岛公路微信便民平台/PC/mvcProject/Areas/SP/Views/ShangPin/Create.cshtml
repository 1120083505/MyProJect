@{
    Layout = "~/Views/Shared/_Index_Create.cshtml";
}
@model  ZrSoft.SP_ShangPin
<script src="~/lib/angular.js"></script>
<script>

     var myApp = angular.module('Create', []);
    layui.use(['form', 'layedit', 'laydate'], function () {
        var form = layui.form()
        , layer = layui.layer;
        //监听提交
        form.on('submit(Accept)', function (data) {
            var json = data.field;
            $.ajax({
               url: "@Url.Action("Create")",
                type: "Post",
                data: json,
                dataType: "json",
                success: function (data) {
                    window.parent.callBack(data);
                }
            });
            return false;
        });
    });
    myApp.controller('sptypeController', function ($scope, $http) {
        $.ajax({
            url: '/SP/sptype/GetAllList',
            type: 'Post',
            dataType: 'json',
            async: false,
            success: function (d) {
                $scope.data = d.rows;
            }
        });
    });
</script>
<fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
    <legend>
        <a class="layui-icon close" style="padding: 5px; font-size:larger; cursor:pointer" title="@Resource.lang.Back">&#xe6ff;</a>@Resource.lang.SP_ShangPin
    </legend>
</fieldset>
<form class="layui-form" action="">
    <div class="layui-form-item">
        <label class="layui-form-label">@Resource.lang.SP_ShangPin_WareName</label>
        <div class="layui-input-block">
            <input id='WareName' name='WareName' type="text" lay-verify="" lay-verify="title" autocomplete="off" placeholder="@Resource.lang.SP_ShangPin_WareName" class="layui-input">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">@Resource.lang.SP_ShangPin_WareType</label>
        <div class="layui-input-block">
            <select lay-verify="required" name="WareType" ng-controller="sptypeController" lay-filter="CustodyId">
                <option value="">@Resource.lang.Select@Resource.lang.SP_ShangPin_WareType</option>
                <option ng-repeat="x in data" value="{{ x.Id}}">{{ x.Name}}</option>
            </select>
            @*<input id='WareType' name='WareType' type="text" lay-verify="" lay-verify="title" autocomplete="off" placeholder="@Resource.lang.SP_ShangPin_WareType" class="layui-input">*@
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">@Resource.lang.SP_ShangPin_WarePrice</label>
        <div class="layui-input-block">
            <input id='WarePrice' name='WarePrice' type="number" lay-verify="number" placeholder="@Resource.lang.SP_ShangPin_WarePrice" autocomplete="off" class="layui-input" precision="2">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">@Resource.lang.SP_ShangPin_Specifications</label>
        <div class="layui-input-block">
            <input id='Specifications' name='Specifications' type="text" lay-verify="" lay-verify="title" autocomplete="off" placeholder="@Resource.lang.SP_ShangPin_Specifications" class="layui-input">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">@Resource.lang.SP_ShangPin_SellingPrice</label>
        <div class="layui-input-block">
            <input id='SellingPrice' name='SellingPrice' type="number" lay-verify="" lay-verify="number" placeholder="@Resource.lang.SP_ShangPin_SellingPrice" autocomplete="off" class="layui-input" precision="2">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">@Resource.lang.SP_ShangPin_Warehouse</label>
        <div class="layui-input-block">
            <input id='Warehouse' name='Warehouse' type="text" lay-verify="" lay-verify="title" autocomplete="off" placeholder="@Resource.lang.SP_ShangPin_Warehouse" class="layui-input">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">@Resource.lang.SP_ShangPin_Memo</label>
        <div class="layui-input-block">
            <textarea id='Memo' name='Memo' placeholder="@Resource.lang.SP_ShangPin_Memo" class="layui-textarea"></textarea>
        </div>
    </div>
   
    <div class="layui-form-item">
        <div class="layui-input-block">
            <button class="layui-btn" lay-submit="" lay-filter="Accept">@Resource.lang.Accept</button>
            <button type="reset" class="layui-btn layui-btn-primary">@Resource.lang.Reset</button>
        </div>
    </div>
</form>
