@{
    Layout = "~/Views/Shared/_Index_Create.cshtml";
}
@model  ZrSoft.SP_Customer
<script src="~/lib/angular.js"></script>
<script>

     var myApp = angular.module('Create', []);
    layui.use(['form', 'layedit', 'laydate'], function () {
        var form = layui.form()
        , layer = layui.layer;
        //监听提交
        form.on('submit(Accept)', function (data) {
            var json = data.field;
            $.ajax({
               url: "@Url.Action("Create")",
                type: "Post",
                data: json,
                dataType: "json",
                success: function (data) {
                    window.parent.callBack(data);
                }
            });
            return false;
        });
    });
</script>
<fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
    <legend>
        <a class="layui-icon close" style="padding: 5px; font-size:larger; cursor:pointer" title="@Resource.lang.Back">&#xe6ff;</a>@Resource.lang.SP_Customer
    </legend>
</fieldset>
<form class="layui-form" action="">
    <div class="layui-form-item">
        <label class="layui-form-label">@Resource.lang.SP_Customer_CustomerName</label>
        <div class="layui-input-block">
            <input id='CustomerName' name='CustomerName' type="text" lay-verify="" lay-verify="title" autocomplete="off" placeholder="@Resource.lang.SP_Customer_CustomerName" class="layui-input">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">@Resource.lang.SP_Customer_Phone</label>
        <div class="layui-input-block">
            <input id='Phone' name='Phone' type="text" lay-verify="" lay-verify="title" autocomplete="off" placeholder="@Resource.lang.SP_Customer_Phone" class="layui-input">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">@Resource.lang.SP_Customer_Address</label>
        <div class="layui-input-block">
            <input id='Address' name='Address' type="text" lay-verify="" lay-verify="title" autocomplete="off" placeholder="@Resource.lang.SP_Customer_Address" class="layui-input">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">@Resource.lang.SP_Customer_BankAccount</label>
        <div class="layui-input-block">
            <input id='BankAccount' name='BankAccount' type="text" lay-verify="" lay-verify="title" autocomplete="off" placeholder="@Resource.lang.SP_Customer_BankAccount" class="layui-input">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">@Resource.lang.SP_Customer_Memo</label>
        <div class="layui-input-block">
            <textarea id='Memo' name='Memo' placeholder="@Resource.lang.SP_Customer_Memo" class="layui-textarea"></textarea>
        </div>
    </div>


    <div class="layui-form-item">
        <div class="layui-input-block">
            <button class="layui-btn" lay-submit="" lay-filter="Accept">@Resource.lang.Accept</button>
            <button type="reset" class="layui-btn layui-btn-primary">@Resource.lang.Reset</button>
        </div>
    </div>
</form>
