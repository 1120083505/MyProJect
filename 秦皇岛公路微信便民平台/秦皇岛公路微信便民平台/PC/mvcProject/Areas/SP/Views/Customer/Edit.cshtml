@{
    Layout = "~/Views/Shared/_Index_Create.cshtml";
}
<script src="~/lib/angular.js"></script>
@model  ZrSoft.SP_Customer
<script>

         var myApp = angular.module('Create', []);
    layui.use(['form', 'layedit', 'laydate'], function () {
        var form = layui.form()
        , layer = layui.layer;
        //监听提交
        form.on('submit(Accept)', function (data) {
            var json = data.field;
            json["Id"] = "@Model.Id";
            $.ajax({
                url: "@Url.Action("Edit")",
                type: "Post",
                data: json,
                dataType: "json",
                success: function (data) {
                    window.parent.callBack(data);
                }
            });
            return false;
        });
    });
</script>
<fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
    <legend>
        <a class="layui-icon close" style="padding: 5px; font-size:larger; cursor:pointer" title="@Resource.lang.Back">&#xe6ff;</a> @Resource.lang.SP_Customer
    </legend>
</fieldset>
<form class="layui-form" action="">
    <div class="layui-form-item">
        <label class="layui-form-label">
            @Resource.lang.SP_Customer_CustomerName
        </label>
        <div class="layui-input-block">
            <input id='CustomerName' name='CustomerName' type="text" lay-verify="" autocomplete="off" placeholder="@Model.CustomerName" class="layui-input" value='@Model.CustomerName'>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">
            @Resource.lang.SP_Customer_Phone
        </label>
        <div class="layui-input-block">
            <input id='Phone' name='Phone' type="text" lay-verify="" autocomplete="off" placeholder="@Model.Phone" class="layui-input" value='@Model.Phone'>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">
            @Resource.lang.SP_Customer_Address
        </label>
        <div class="layui-input-block">
            <input id='Address' name='Address' type="text" lay-verify="" autocomplete="off" placeholder="@Model.Address" class="layui-input" value='@Model.Address'>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">
            @Resource.lang.SP_Customer_BankAccount
        </label>
        <div class="layui-input-block">
            <input id='BankAccount' name='BankAccount' type="text" lay-verify="" autocomplete="off" placeholder="@Model.BankAccount" class="layui-input" value='@Model.BankAccount'>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">
            @Resource.lang.SP_Customer_Memo
        </label>
        <div class="layui-input-block">
            <textarea id='Memo' name='Memo' placeholder="@Resource.lang.SP_Customer_Memo" class="layui-textarea">@Model.Memo</textarea>
        </div>
    </div>
    <div class="layui-form-item">
        <div class="layui-input-block">
            <button class="layui-btn" lay-submit="" lay-filter="Accept">@Resource.lang.Accept</button>
            <button type="reset" class="layui-btn layui-btn-primary">@Resource.lang.Reset</button>
        </div>
    </div>
</form>
